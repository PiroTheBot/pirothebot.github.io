---
interface Props {
  color?: 'primary' | 'red' | 'yellow' | 'muted';
  items: string[];
}

const { color = 'primary', items } = Astro.props;

const colorClasses = {
  primary: 'text-primary',
  red: 'text-red-500',
  yellow: 'text-yellow-500',
  muted: 'text-text-muted',
};

const bulletColor = colorClasses[color];
---

<ul class="bullet-list space-y-2 text-sm text-text-secondary">
  {items.map((item) => (
    <li class="bullet-item">
      <span class={`bullet ${bulletColor}`}>â€¢</span>
      <span class="bullet-text">{item}</span>
    </li>
  ))}
</ul>

<style>
  .bullet-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .bullet-item {
    display: flex;
    align-items: baseline;
    line-height: 1.5;
  }
  
  .bullet {
    flex-shrink: 0;
    width: 1.25em;
    text-align: center;
    /* Ensure bullet sits on same baseline as text */
    line-height: inherit;
  }
  
  .bullet-text {
    flex: 1;
    line-height: inherit;
  }
</style>
