---
interface Props {
  color?: 'primary' | 'red' | 'yellow' | 'muted';
  bullet?: string;
  items: string[];
}

const { color = 'primary', bullet = 'â€¢', items } = Astro.props;

const colorClasses = {
  primary: 'text-primary',
  red: 'text-red-500',
  yellow: 'text-yellow-500',
  muted: 'text-text-muted',
};

const bulletColor = colorClasses[color];
---

<ul class="bullet-list">
  {items.map((item) => (
    <li class="bullet-item">
      <span class={`bullet ${bulletColor}`} aria-hidden="true">{bullet}</span>
      <span class="bullet-text">{item}</span>
    </li>
  ))}
</ul>

<style>
  .bullet-list {
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }
  
  .bullet-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
  
  .bullet-item:last-child {
    margin-bottom: 0;
  }
  
  .bullet {
    flex-shrink: 0;
  }
  
  .bullet-text {
    flex: 1;
  }
</style>
